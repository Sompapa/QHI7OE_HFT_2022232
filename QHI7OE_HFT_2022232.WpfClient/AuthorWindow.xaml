<Window x:Class="QHI7OE_HFT_2022232.WpfClient.AuthorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QHI7OE_HFT_2022232.WpfClient"
        xmlns:vm="clr-namespace:QHI7OE_HFT_2022232.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="AuthorWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:AuthorWindowViewModel/>
    </Window.DataContext>
    <StackPanel x:Name="stack">
        <Label Content="Id" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.AuthorId}"  Padding="10"/>
        <Label Content="Name" Padding="10" Background="LightBlue"/>
        <TextBox Text="{Binding Actual.AuthorName}" Padding="10"/>
        <Button Content="Save" Padding="10" Click="Button_Click"/>
    </StackPanel>
</Window>
