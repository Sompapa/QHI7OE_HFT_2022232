<Window x:Class="QHI7OE_HFT_2022232.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QHI7OE_HFT_2022232.WpfClient"
        xmlns:vm="clr-namespace:QHI7OE_HFT_2022232.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Button Content="Mangas" Command="{Binding OpenMangaWindow}" Margin="20" Padding="40"/>
            <Button Content="Authors" Margin="20" Command="{Binding OpenAuthorWindow}" Padding="40"/>
            <Button Content="Genres" Margin="20" Command="{Binding OpenGenreWindow}" Padding="40"/>
        </StackPanel>
    </Grid>
</Window>
